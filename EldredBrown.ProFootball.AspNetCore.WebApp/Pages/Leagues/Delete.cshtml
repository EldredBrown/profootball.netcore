@page "{id:int}"
@model DeleteModel

@{
    ViewData["Title"] = "Delete League";
}

<h1>League</h1>

<h4>Delete</h4>
<hr />
<div>
    <h3>Are you sure you want to delete this?</h3>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="League.LongName"></label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.League.LongName)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="League.ShortName"></label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.League.ShortName)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="League.FirstSeasonYear"></label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.League.FirstSeasonYear)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="League.LastSeasonYear"></label>"
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.League.LastSeasonYear)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="League.ID" />
        <button class="btn btn-danger" type="submit">Delete</button>
        <a class="btn btn-primary" asp-page="Index">Cancel</a>
    </form>
</div>
