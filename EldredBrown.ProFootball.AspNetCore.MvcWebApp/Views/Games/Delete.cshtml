@model Game
@{
    ViewData["Title"] = "Delete Game";
}

<h1>Game</h1>

<h4>Delete</h4>
<hr />
<div>
    <h3>Are you sure you want to delete this game?</h3>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="SeasonId"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonId
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Week"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Week
        </dd>
        <dt class="col-sm-2">
            <label asp-for="GuestName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.GuestName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="GuestScore"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.GuestScore
        </dd>
        <dt class="col-sm-2">
            <label asp-for="HostName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.HostName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="HostScore"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.HostScore
        </dd>
        <dt class="col-sm-2">
            <label asp-for="IsPlayoffGame"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.IsPlayoffGame
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Notes"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Notes
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ID" />
        <p>
            <button type="submit" class="btn btn-danger">Delete</button>
        </p>
        <p>
            <a asp-action="List">Back to List</a>
        </p>
    </form>
</div>
