@model Game
@{
    ViewData["Title"] = "Game Details";
}

<h1>Game</h1>

<h4>Details</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="SeasonId"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonId
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Week"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Week
        </dd>
        <dt class="col-sm-2">
            <label asp-for="GuestName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.GuestName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="GuestScore"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.GuestScore
        </dd>
        <dt class="col-sm-2">
            <label asp-for="HostName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.HostName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="HostScore"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.HostScore
        </dd>
        <dt class="col-sm-2">
            <label asp-for="IsPlayoffGame"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.IsPlayoffGame
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Notes"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Notes
        </dd>
    </dl>
</div>
<div>
    <p>
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Edit</a>
    </p>
    <p>
        <a asp-action="List">Back to List</a>
    </p>
</div>
