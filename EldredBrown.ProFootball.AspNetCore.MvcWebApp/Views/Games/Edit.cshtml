@model Game

@{
    ViewData["Title"] = "Edit Game";
}

<h1>Game</h1>

<h4>Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="SeasonId" class="col-form-label"></label>
                @Html.DropDownList("SeasonId", null, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="SeasonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Week" class="col-form-label"></label>
                @Html.DropDownList("Week", null, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Week" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestName" class="col-form-label"></label>
                <input asp-for="GuestName" class="form-control" />
                @* @Html.DropDownList("GuestName", null, htmlAttributes: new { @class = "form-control" })*@
                <span asp-validation-for="GuestName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestScore" class="col-form-label"></label>
                <input asp-for="GuestScore" class="form-control" />
                <span asp-validation-for="GuestScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HostName" class="col-form-label"></label>
                <input asp-for="HostName" class="form-control" />
                @* @Html.DropDownList("HostName", null, htmlAttributes: new { @class = "form-control" })*@
                <span asp-validation-for="HostName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HostScore" class="col-form-label"></label>
                <input asp-for="HostScore" class="form-control" />
                <span asp-validation-for="HostScore" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPlayoffGame" />
                    <label asp-for="IsPlayoffGame" class="col-form-label"></label>
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="col-form-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
