@model GamesIndexViewModel

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>

<form>
    <p>
        <label class="col-form-label">Season</label>
        @Html.DropDownList("Seasons", null, htmlAttributes: new
        {
            @onchange = "document.location.href='/Games/SetSelectedSeasonId?SeasonId=' + this.options[this.selectedIndex].value;"
        })
    </p>
</form>

<form>
    <p>
        <label class="col-form-label">Week</label>
        @Html.DropDownList("Weeks", null, string.Empty, htmlAttributes: new
        {
            @onchange = "document.location.href='/Games/SetSelectedWeek?Week=' + this.options[this.selectedIndex].value;"
        })
    </p>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Games.SingleOrDefault().SeasonId)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Games.SingleOrDefault().Week)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games.SingleOrDefault().GuestName)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Games.SingleOrDefault().GuestScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games.SingleOrDefault().HostName)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Games.SingleOrDefault().HostScore)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Games.SingleOrDefault().IsPlayoffGame)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var game in Model.Games)
{
        <tr>
            <td class="text-right">
                @Html.DisplayFor(modelItem => game.SeasonId)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => game.Week)
            </td>
            <td>
                @Html.DisplayFor(modelItem => game.GuestName)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => game.GuestScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => game.HostName)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => game.HostScore)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => game.IsPlayoffGame)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@game.ID" class="btn btn-primary btn-sm">Edit</a>
                <a asp-action="Details" asp-route-id="@game.ID" class="btn btn-primary btn-sm">Details</a>
                <a asp-action="Delete" asp-route-id="@game.ID" class="btn btn-primary btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
