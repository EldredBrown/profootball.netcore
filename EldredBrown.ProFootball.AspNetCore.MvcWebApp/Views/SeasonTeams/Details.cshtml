@model SeasonTeamDetailsViewModel

@{
    ViewData["Title"] = "Team Details";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Season
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.SeasonId
        </dd>
        <dt class="col-sm-2">
            Team
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.TeamName
        </dd>
        <dt class="col-sm-2">
            League
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.LeagueName
        </dd>
        <dt class="col-sm-2">
            Conference
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.ConferenceName
        </dd>
        <dt class="col-sm-2">
            Division
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.DivisionName
        </dd>
        <dt class="col-sm-2">
            Games
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.Games
        </dd>
        <dt class="col-sm-2">
            Wins
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.Wins
        </dd>
        <dt class="col-sm-2">
            Losses
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.Losses
        </dd>
        <dt class="col-sm-2">
            Ties
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.Ties
        </dd>
        <dt class="col-sm-2">
            Winning Percentage
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.WinningPercentage
        </dd>
        <dt class="col-sm-2">
            Points Scored
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.PointsFor
        </dd>
        <dt class="col-sm-2">
            Points Allowed
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.PointsAgainst
        </dd>
        <dt class="col-sm-2">
            Pythagorean Wins
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.PythagoreanWins
        </dd>
        <dt class="col-sm-2">
            Pythagorean Losses
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.PythagoreanLosses
        </dd>
        <dt class="col-sm-2">
            Offensive Average
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.OffensiveAverage
        </dd>
        <dt class="col-sm-2">
            Offensive Factor
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.OffensiveFactor
        </dd>
        <dt class="col-sm-2">
            Offensive Index
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.OffensiveIndex
        </dd>
        <dt class="col-sm-2">
            Defensive Average
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.DefensiveAverage
        </dd>
        <dt class="col-sm-2">
            Defensive Factor
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.DefensiveFactor
        </dd>
        <dt class="col-sm-2">
            Defensive Index
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.DefensiveIndex
        </dd>
        <dt class="col-sm-2">
            Final Pyth Win Pct.
        </dt>
        <dd class="col-sm-10">
            @Model.SeasonTeam.FinalPythagoreanWinningPercentage
        </dd>
    </dl>
</div>

@if (Model.SeasonTeamScheduleProfile != null)
{
    <h5>Team Schedule Profile</h5>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Opponent
                </th>
                <th style="text-align: right">
                    GPF
                </th>
                <th style="text-align: right">
                    GPA
                </th>
                <th style="text-align: right">
                    OW
                </th>
                <th style="text-align: right">
                    OL
                </th>
                <th style="text-align: right">
                    OT
                </th>
                <th style="text-align: right">
                    OWPct
                </th>
                <th style="text-align: right">
                    OWG
                </th>
                <th style="text-align: right">
                    OWPF
                </th>
                <th style="text-align: right">
                    OWPA
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var opponent in Model.SeasonTeamScheduleProfile.Opponents)
        {
            <tr>
                <td>
                    @opponent.Name
                </td>
                <td style="text-align: right">
                    @opponent.GamePointsFor
                </td>
                <td style="text-align: right">
                    @opponent.GamePointsAgainst
                </td>
                <td style="text-align: right">
                    @opponent.Wins
                </td>
                <td style="text-align: right">
                    @opponent.Losses
                </td>
                <td style="text-align: right">
                    @opponent.Ties
                </td>
                <td style="text-align: right">
                    @opponent.WinningPercentage
                </td>
                <td style="text-align: right">
                    @opponent.WeightedGames
                </td>
                <td style="text-align: right">
                    @opponent.WeightedPointsFor
                </td>
                <td style="text-align: right">
                    @opponent.WeightedPointsAgainst
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@if (Model.SeasonTeamScheduleTotals != null)
{
    <h5>Team Schedule Totals</h5>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th style="text-align: right">
                    G
                </th>
                <th style="text-align: right">
                    PF
                </th>
                <th style="text-align: right">
                    PA
                </th>
                <th style="text-align: right">
                    SW
                </th>
                <th style="text-align: right">
                    SL
                </th>
                <th style="text-align: right">
                    ST
                </th>
                <th style="text-align: right">
                    SWPct
                </th>
                <th style="text-align: right">
                    SG
                </th>
                <th style="text-align: right">
                    SPF
                </th>
                <th style="text-align: right">
                    SPA
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="text-align: right">
                    @Model.SeasonTeamScheduleTotals.Games
                </td>
                <td style="text-align: right">
                    @Model.SeasonTeamScheduleTotals.PointsFor
                </td>
                <td style="text-align: right">
                    @Model.SeasonTeamScheduleTotals.PointsAgainst
                </td>
                <td style="text-align: right">
                    @Model.SeasonTeamScheduleTotals.ScheduleWins
                </td>
                <td style="text-align: right">
                    @Model.SeasonTeamScheduleTotals.ScheduleLosses
                </td>
                <td style="text-align: right">
                    @Model.SeasonTeamScheduleTotals.ScheduleTies
                </td>
                <td style="text-align: right">
                    @Model.SeasonTeamScheduleTotals.ScheduleWinningPercentage
                </td>
                <td style="text-align: right">
                    @Model.SeasonTeamScheduleTotals.ScheduleGames
                </td>
                <td style="text-align: right">
                    @Model.SeasonTeamScheduleTotals.SchedulePointsFor
                </td>
                <td style="text-align: right">
                    @Model.SeasonTeamScheduleTotals.SchedulePointsAgainst
                </td>
            </tr>
        </tbody>
    </table>
}

@if (Model.SeasonTeamScheduleAverages != null)
{
    <h5>Team Schedule Averages</h5>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th style="text-align: right">
                    PF
                </th>
                <th style="text-align: right">
                    PA
                </th>
                <th style="text-align: right">
                    SPF
                </th>
                <th style="text-align: right">
                    SPA
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="text-align: right">
                    @Model.SeasonTeamScheduleAverages.PointsFor
                </td>
                <td style="text-align: right">
                    @Model.SeasonTeamScheduleAverages.PointsAgainst
                </td>
                <td style="text-align: right;">
                    @Model.SeasonTeamScheduleAverages.SchedulePointsFor
                </td>
                <td style="text-align: right">
                    @Model.SeasonTeamScheduleAverages.SchedulePointsAgainst
                </td>
            </tr>
        </tbody>
    </table>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
