@model LeagueSeason

@{
    ViewData["Title"] = "Create League Season";
}

<h1>League Season</h1>

<h4>Create</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeagueName" class="control-label"></label>
                <input asp-for="LeagueName" class="form-control" />
                <span asp-validation-for="LeagueName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeasonYear" class="control-label"></label>
                <input asp-for="SeasonYear" class="form-control" />
                <span asp-validation-for="SeasonYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalGames" class="control-label"></label>
                <input asp-for="TotalGames" class="form-control" />
                <span asp-validation-for="TotalGames" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPoints" class="control-label"></label>
                <input asp-for="TotalPoints" class="form-control" />
                <span asp-validation-for="TotalPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AveragePoints" class="control-label"></label>
                <input asp-for="AveragePoints" class="form-control" />
                <span asp-validation-for="AveragePoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
