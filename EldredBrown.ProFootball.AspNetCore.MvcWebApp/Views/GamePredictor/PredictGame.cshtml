@model GamePrediction

@{
    ViewBag.Title = "Predict Game";
}

<h1>Predict Game</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GuestSeasonId" class="control-label"></label>
                @Html.DropDownList("GuestSeasonId", null, htmlAttributes: new
                {
                    @class = "form-control",
                    @onchange = "document.location.href='/GamePredictor/ApplyFilter?guestSeasonID=' + this.options[this.selectedIndex].value;"
                })
                <span asp-validation-for="GuestSeasonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestName" class="control-label"></label>
                @Html.DropDownList("GuestName", null, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="GuestName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestScore" class="control-label"></label>
                @Html.DisplayFor(model => model.GuestScore)
                <span asp-validation-for="GuestScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HostSeasonId" class="control-label"></label>
                @Html.DropDownList("HostSeasonId", null, htmlAttributes: new
                {
                    @class = "form-control",
                    @onchange = "document.location.href='/GamePredictor/ApplyFilter?HostSeasonID=' + this.options[this.selectedIndex].value;"
                })
                <span asp-validation-for="HostSeasonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HostName" class="control-label"></label>
                @Html.DropDownList("HostName", null, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="HostName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HostScore" class="control-label"></label>
                @Html.DisplayFor(model => model.HostScore)
                <span asp-validation-for="HostScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg">Calculate Prediction</button>
            </div>
        </form>
    </div>
</div>
