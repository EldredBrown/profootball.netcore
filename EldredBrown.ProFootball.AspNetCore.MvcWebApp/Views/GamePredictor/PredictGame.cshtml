@model GamePrediction

@{
    ViewData["Title"] = "Predict Game";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="text-danger field-validation-error" asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label class="col-form-label" asp-for="GuestSeasonYear"></label>
                <select onchange="document.location.href=`/GamePredictor/ApplyFilter?GuestSeasonYear=${this.options[this.selectedIndex].value}`;"
                        class="form-control" asp-for="GuestSeasonYear" asp-items="ViewBag.GuestSeasons">
                </select>
                <span class="text-danger field-validation-error" asp-validation-for="GuestSeasonYear"></span>
            </div>
            <div class="form-group">
                <label class="col-form-label" asp-for="GuestName"></label>
                <select class="form-control" asp-for="GuestName" asp-items="ViewBag.Guests"></select>
                <span class="text-danger field-validation-error" asp-validation-for="GuestName"></span>
            </div>
            <div class="form-group">
                <label class="col-form-label" asp-for="GuestScore"></label>
                <b>@Html.DisplayFor(model => model.GuestScore)</b>
            </div>

            <div class="form-group">
                <label class="col-form-label" asp-for="HostSeasonYear"></label>
                <select onchange="document.location.href=`/GamePredictor/ApplyFilter?HostSeasonYear=${this.options[this.selectedIndex].value}`;"
                        class="form-control" asp-for="HostSeasonYear" asp-items="ViewBag.HostSeasons">
                </select>
                <span class="text-danger field-validation-error" asp-validation-for="HostSeasonYear"></span>
            </div>
            <div class="form-group">
                <label class="col-form-label" asp-for="HostName"></label>
                <select class="form-control" asp-for="HostName" asp-items="ViewBag.Hosts"></select>
                <span class="text-danger field-validation-error" asp-validation-for="HostName"></span>
            </div>
            <div class="form-group">
                <label class="col-form-label" asp-for="HostScore"></label>
                <b>@Html.DisplayFor(model => model.HostScore)</b>
            </div>

            <div class="form-group">
                <button class="btn btn-primary btn-lg" type="submit">Calculate Prediction</button>
            </div>
        </form>
    </div>
</div>
