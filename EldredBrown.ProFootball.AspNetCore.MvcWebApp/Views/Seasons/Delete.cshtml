@model Season

@{
    ViewData["Title"] = "Delete Season";
}

<h1>Season</h1>

<h4>Delete</h4>
<hr />
<div>
    <h3>Are you sure you want to delete this?</h3>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Year"></label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="NumOfWeeksScheduled"></label>
        </dt>
        <dd class=" col-sm-10">
            @Html.DisplayFor(model => model.NumOfWeeksScheduled)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="NumOfWeeksCompleted"></label>
        </dt>
        <dd class=" col-sm-10">
            @Html.DisplayFor(model => model.NumOfWeeksCompleted)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <p>
            <button class="btn btn-danger" type="submit">Delete</button>
        </p>
        <p>
            <a asp-action="Index">Back to List</a>
        </p>
    </form>
</div>
