@model Season

@{
    ViewData["Title"] = "Create Season";
}

<h1>Season</h1>

<h4>Create</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label class="control-label" asp-for="Year"></label>
                <input class="form-control" asp-for="Year" />
                <span class="text-danger" asp-validation-for="Year"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="NumOfWeeksScheduled"></label>
                <input class="form-control" asp-for="NumOfWeeksScheduled" />
                <span class="text-danger" asp-validation-for="NumOfWeeksScheduled"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="NumOfWeeksCompleted"></label>
                <input class="form-control" asp-for="NumOfWeeksCompleted" />
                <span class="text-danger" asp-validation-for="NumOfWeeksCompleted"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
