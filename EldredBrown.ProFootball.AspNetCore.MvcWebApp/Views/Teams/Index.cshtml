@model TeamsIndexViewModel

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teams.SingleOrDefault().Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var team in Model.Teams)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => team.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@team.ID" class="btn btn-primary btn-sm">Edit</a>
                <a asp-action="Details" asp-route-id="@team.ID" class="btn btn-primary btn-sm">Details</a>
                <a asp-action="Delete" asp-route-id="@team.ID" class="btn btn-primary btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
