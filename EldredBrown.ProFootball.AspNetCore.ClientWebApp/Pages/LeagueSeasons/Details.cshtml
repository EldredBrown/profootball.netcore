@page "{id:int}"

@{
    ViewData["Title"] = "League Season";
}

<h1>@ViewData["Title"]</h1>

<h4>Details</h4>
<hr />
<div id="league-season">
    <script id="league-season-details" type="text/x-handlebars-template">
        <dl class="row">
            <dt class="col-sm-2">
                <label>League</label>
            </dt>
            <dd class="col-sm-10">
                {{leagueName}}
            </dd>
            <dt class="col-sm-2">
                <label>Season</label>
            </dt>
            <dd class="col-sm-10">
                {{seasonYear}}
            </dd>
            <dt class="col-sm-2">
                <label>Total Games</label>
            </dt>
            <dd class="col-sm-10">
                {{totalGames}}
            </dd>
            <dt class="col-sm-2">
                <label>Total Points</label>
            </dt>
            <dd class="col-sm-10">
                {{totalPoints}}
            </dd>
            <dt class="col-sm-2">
                <label>Average Points</label>
            </dt>
            <dd class="col-sm-10">
                {{averagePoints}}
            </dd>
        </dl>
        <p>
            <a class="btn btn-primary btn-sm" href="/LeagueSeasons/Edit/{{id}}">Edit</a>
        </p>
    </script>
</div>
<p>
    <a asp-page="Index">Back to List</a>
</p>

<script type="text/javascript" src="~/lib/handlebars/handlebars.js"></script>
<script type="module" src="~/js/view-modules/league-seasons/details.js"></script>
