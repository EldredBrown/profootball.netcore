@page "{id:int}"

@{
    ViewData["Title"] = "Delete League Season";
}

<h1>League Season</h1>

<h4>Delete</h4>
<hr />
<div id="league-season">
    <h3>Are you sure you want to delete this?</h3>
    <script id="league-season-details" type="text/x-handlebars-template">
        <dl class="row">
            <dt class="col-sm-2">
                <label>League</label>
            </dt>
            <dd class="col-sm-10">
                {{leagueName}}
            </dd>
            <dt class="col-sm-2">
                <label>Season</label>
            </dt>
            <dd class="col-sm-10">
                {{seasonYear}}
            </dd>
            <dt class="col-sm-2">
                <label>Total Games</label>
            </dt>
            <dd class="col-sm-10">
                {{totalGames}}
            </dd>
            <dt class="col-sm-2">
                <label>Total Points</label>
            </dt>
            <dd class="col-sm-10">
                {{totalPoints}}
            </dd>
            <dt class="col-sm-2">
                <label>Average Points</label>
            </dt>
            <dd class="col-sm-10">
                {{averagePoints}}
            </dd>
        </dl>
    </script>
</div>

<form method="delete">
    <div class="form-group">
        <button class="btn btn-danger" type="submit">Delete</button>
        <a class="btn btn-secondary" asp-page="Index">Cancel</a>
    </div>
</form>

<script type="text/javascript" src="~/lib/handlebars/handlebars.js"></script>
<script type="module" src="~/js/view-modules/league-seasons/delete.js"></script>
