<div class="text-danger field-validation-error" id="validation-summary"></div>
<div class="form-group">
    <label class="col-form-label">League</label>
    <input class="form-control" id="league-name" type="text" />
    <span class="text-danger field-validation-error" id="validation-for-league-name"></span>
</div>
<div class="form-group">
    <label class="col-form-label">Season</label>
    <select class="form-control" id="season">
        <script id="season-year" type="text/x-handlebars-template">
            {{#each seasons}}
            <option>{{year}}</option>
            {{/each}}
        </script>
    </select>
    <span class="text-danger field-validation-error" id="validation-for-season-year"></span>
</div>
<div class="form-group">
    <label class="col-form-label">Total Games</label>
    <input class="form-control" id="total-games" type="number" value="0" />
    <span class="text-danger field-validation-error" id="validation-for-total-games"></span>
</div>
<div class="form-group">
    <label class="col-form-label">Total Points</label>
    <input class="form-control" id="total-points" type="number" value="0" />
    <span class="text-danger field-validation-error" id="validation-for-total-points"></span>
</div>
<div class="form-group">
    <label class="col-form-label">Average Points</label>
    <input class="form-control" id="average-points" type="text" />
    <span class="text-danger field-validation-error" id="validation-for-average-points"></span>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
